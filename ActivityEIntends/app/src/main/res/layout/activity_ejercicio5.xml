<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gestorclientes.dm2.activityeintends.Ejer5.Ejercicio5"
    android:background="@drawable/fondo_juego">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="El Txemaforo"
        android:id="@+id/textView14"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout8"
        android:layout_marginTop="10dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:paddingLeft="25dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:id="@+id/columna1">

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:textAlignment="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/semaforo1"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:onClick="clickSemaforo"
                        android:src="@drawable/led_rojo" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_column="1"
                    android:textAlignment="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/semaforo2"
                        android:src="@drawable/led_rojo"
                        android:onClick="clickSemaforo"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_column="2"
                    android:textAlignment="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/semaforo3"
                        android:src="@drawable/led_rojo"
                        android:layout_centerVertical="true"
                        android:onClick="clickSemaforo"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_column="3"
                    android:textAlignment="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/semaforo4"
                        android:src="@drawable/led_rojo"
                        android:layout_centerVertical="true"
                        android:onClick="clickSemaforo"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:id="@+id/columna2">

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:textAlignment="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/semaforo5"
                        android:src="@drawable/led_rojo"
                        android:layout_centerVertical="true"
                        android:onClick="clickSemaforo"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_column="1"
                    android:textAlignment="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/semaforo6"
                        android:src="@drawable/led_rojo"
                        android:layout_centerVertical="true"
                        android:onClick="clickSemaforo"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_column="2"
                    android:textAlignment="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/semaforo7"
                        android:src="@drawable/led_rojo"
                        android:layout_centerVertical="true"
                        android:onClick="clickSemaforo"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_column="3"
                    android:textAlignment="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/semaforo8"
                        android:src="@drawable/led_rojo"
                        android:layout_centerVertical="true"
                        android:onClick="clickSemaforo"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:id="@+id/columna3">

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:textAlignment="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/semaforo9"
                        android:src="@drawable/led_rojo"
                        android:layout_centerVertical="true"
                        android:onClick="clickSemaforo"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_column="1"
                    android:textAlignment="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/semaforo10"
                        android:src="@drawable/led_rojo"
                        android:layout_centerVertical="true"
                        android:onClick="clickSemaforo"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_column="2"
                    android:textAlignment="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/semaforo11"
                        android:src="@drawable/led_rojo"
                        android:layout_centerVertical="true"
                        android:onClick="clickSemaforo"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_column="3"
                    android:textAlignment="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/semaforo12"
                        android:src="@drawable/led_rojo"
                        android:layout_centerVertical="true"
                        android:onClick="clickSemaforo"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/nivel"
        android:textSize="45dp"
        android:layout_below="@+id/linearLayout8"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Comenzar a jugar!"
        android:id="@+id/boton_comenzar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Objetivo: Poner todos los semaforos en verde en el menor tiempo posible."
        android:id="@+id/textoObjetivo"
        android:layout_alignTop="@+id/nivel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
